<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"

        android:layout_marginTop="35dp"
        android:layout_marginLeft="10dp"

        android:text="User Name"

        android:textSize="27dp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/order_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_name"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="2dp"
        android:text="Phone Nmber"
        android:textSize="25dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/order_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"

        android:layout_below="@+id/order_phone_number"

        android:text="Order Price"

        android:textSize="22dp"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/order_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_marginLeft="10dp"


        android:layout_below="@+id/order_price"

        android:text="Address,City"

        android:textSize="20dp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/order_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black"

        android:layout_below="@+id/order_address"

        android:text="Date Time"
        android:textSize="20dp"
        android:textStyle="bold"

        />

    <Button
        android:id="@+id/showorder"
        android:text="Show This Order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_date"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@color/colorPrimaryDark"/>






</RelativeLayout>